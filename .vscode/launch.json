{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "NestJS Debug",
        "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
        "args": ["start", "--debug", "6005"],
        "runtimeArgs": ["--nolazy", "--inspect-brk=6005"],
        "sourceMaps": true,
        "protocol": "inspector",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }